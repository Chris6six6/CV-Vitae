---
import Section from "../Section.astro"
import { certificates } from "@cv"
---

<Section title="Certificados">
  <ul>
    {
      certificates.map(({ name, date, issuer, url }) => {
        const certificateDate = new Date(date).getFullYear();

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{name}</h3>
                  <p>Emitido por: {issuer}</p>
                </div>

                <time>{certificateDate}</time>
              </header>

              <footer>
                <a href={url} target="_blank" rel="noopener noreferrer">Ver certificado</a>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  footer a {
    color: #0073e6;
    text-decoration: none;
    font-weight: 500;
  }

  footer a:hover {
    text-decoration: underline;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
